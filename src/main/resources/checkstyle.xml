<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">

  <!-- 1. ✅ Límite de caracteres por línea para mejorar legibilidad -->
  <module name="LineLength">
    <property name="max" value="120"/>
  </module>

  <!-- 2. ✅ Prohíbe el uso de imports con * (usa imports explícitos) -->
  <module name="TreeWalker">

    <module name="AvoidStarImport"/>

    <!-- 3. ✅ Elimina imports no utilizados -->
    <module name="UnusedImports"/>

    <!-- 4. ✅ Requiere llaves incluso para bloques de una sola línea -->
    <module name="NeedBraces"/>

    <!-- 5. ✅ Obliga a usar llaves de apertura en la misma línea -->
    <module name="LeftCurly"/>

  </module>
</module>
